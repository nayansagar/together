<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/invite_join_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Join"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/invite_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Family Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/invite_joinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/invite_join_button"
        android:layout_alignBottom="@+id/invite_join_button"
        android:layout_alignLeft="@+id/invite_fname"
        android:text="Location" />

    <ImageView
        android:id="@+id/invite_fimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>